{
  "version": "1.6.2",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "strict": true,
    "sourceMap": true,
    "outDir": "build/lib/",
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.py"
  ]
}
