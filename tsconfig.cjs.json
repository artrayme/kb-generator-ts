{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build/cjs",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "skipLibCheck": true,
    "types": [],
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./node_modules/*",
    "**/*.spec.*"
  ]
}
